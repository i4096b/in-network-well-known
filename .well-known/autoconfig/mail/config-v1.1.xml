<?xml version="1.0"?>
<clientConfig version="1.1">
    <emailProvider id="in-nw.net">
      <domain>in-nw.net</domain>
      <incomingServer type="imap">
         <hostname>imap.in-nw.net</hostname>
         <port>993</port>
         <socketType>SSL</socketType>
         <username>%EMAILADDRESS%</username>
         <authentication>password-cleartext</authentication>
      </incomingServer>
      <outgoingServer type="smtp">
         <hostname>smtp.in-nw.net</hostname>
         <port>587</port>
         <socketType>STARTTLS</socketType>
         <username>%EMAILADDRESS%</username>
         <authentication>password-cleartext</authentication>
      </outgoingServer>
    </emailProvider>
</clientConfig>